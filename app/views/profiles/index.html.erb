<p id="notice"><%= notice %></p>

<div class="custom">
<div class="profile">
  <h1>Profiles</h1>
<table>
  <thead>
    <tr>
      <th>
       <div class="row">
          <div class="form-group">
            <div class="control-label col-sm-2"> 
              Firstname
            </div>
          </div>
        </div>
      </th>
    <th>
       <div class="row">
          <div class="form-group">
            <div class="control-label col-sm-2"> 
              Lastname
            </div>
          </div>
        </div>
      </th>

       <th>
       <div class="row">
          <div class="form-group">
            <div class="control-label col-sm-2"> 
              Email
            </div>
          </div>
        </div>
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>

      <td>
        <div class="row">
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= profile.firstname %>
            </div>
          </div>
        </div>
      </td>
      <td>
        <div class="row">
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= profile.lastname %>
            </div>
          </div>
        </div>
      </td>
      <td>
        <div class="row">
          <div class="form-group">
            <div class="control-label col-sm-2">
             <%= profile.email %>
            </div>
          </div>
        </div>
      </td>
      
      <td>
        <div class="row">
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= link_to 'Show', profile, class: 'btn btn-info'%>
            </div>
          </div>
        </div>
      </td>
        <td>
        <div class="row">
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= link_to 'Edit', edit_profile_path(profile), class: 'btn btn-warning' %>
            </div>
          </div>
        </div>
      </td>
      <td>
        <div class="row">
          <div class="form-group">
            <div class="control-label col-sm-2"><%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            </div>
          </div>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Profile', new_profile_path, class: 'btn btn-info' %>
</div>